<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.militarypt.militarypt.Exam">

    <Button
        android:id="@+id/push"
        android:layout_width="wrap_content"
        style="@style/ButtonStyling"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Pushups"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="38dp" />

    <Button
        android:id="@+id/situps"
        style="@style/ButtonStyling"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/push"
        android:layout_toRightOf="@+id/push"
        android:text="Situps"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/run"
        style="@style/ButtonStyling"
        android:layout_width="90dp"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/situps"
        android:layout_toRightOf="@+id/situps"
        android:text="Run"
        android:textColor="@color/black" />

    <FrameLayout
        android:id="@+id/examFrame"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp">

    </FrameLayout>

    <Button
        android:id="@+id/butScore"
        style="@style/ButtonStyling"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/run"
        android:layout_toRightOf="@+id/run"
        android:text="Score"
        android:textColor="@color/black" />

</RelativeLayout>
